# MongoDB
MONGO_URI=mongodb://localhost:27017/blog

# Google OAuth
GOOGLE_CLIENT=your_google_client_id
GOOGLE_SECRET=your_google_client_secret

# Session & JWT
COOKIE_KEY=your_cookie_secret_key
TOKEN_SECRET=your_jwt_secret_key

# Email (Nodemailer)
PASS=your_email_app_password
EMAIL_ID=your_email@gmail.com

# Server
PORT=5002

# URLs
REACT_APP_BACKEND_URL=http://localhost:5002
REACT_APP_FRONTEND_URL=http://localhost:3000

# Cloudinary
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Axiom Logging (Optional - for production)
# Get from https://axiom.co
AXIOM_TOKEN=your_axiom_api_token
AXIOM_DATASET=blog-logs
AXIOM_ORG_ID=your_org_id

# Logging
LOG_LEVEL=INFO
